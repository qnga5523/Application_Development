@model List<Category>

@{
    ViewData["Title"] = "Index";
}
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <h1>
        Categories
        <a asp-controller="Categories" asp-action="Create" class="btn btn-secondarys button-add" type="button"> <i class="fa-solid fa-plus icon-plus" style="padding-top: 10px"></i></a>
    </h1>

    @if (Model.Count == 0)
    {
        <center>
            <span class="badge badge-danger">Do not have any category</span>
        </center>

    }
    else
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        Category ID
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Description
                    </th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Name
                        </td>

                        <td>
                            @item.Description
                        </td>
                        
                            <td>
                                <a asp-controller="Category" asp-action="Edit" class="action-icon" asp-route-id="@item.Id"> <i class="mdi mdi-square-edit-outline "></i></a>
                                <a asp-controller="Category" asp-action="Confirm" class="action-icon" asp-route-id="@item.Id"> <i class="mdi mdi-delete"></i></a>
                            </td>

                        


                    </tr>
                }
            </tbody>
        </table>
    }

}