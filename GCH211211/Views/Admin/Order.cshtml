@model List<Order>
@{
    ViewData["Title"] = "Index";
}
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <h1>Manage order request</h1>
    @if (Model.Count == 0)
    {
        <center>
            <span class="badge badge-danger">Do not have any order</span>
        </center>
    }
    else
    {
        @foreach (var order in Model)
        {
            <h3>Order:</h3>


            <table>
                <tr>
                    <th style="padding-left: 20px;">Book</th>
                    <th style="padding-left: 20px;">Image</th>
                    <th style="padding-left: 20px;">Quantity</th>
                    <th style="padding-left: 20px;">Price</th>
                </tr>

                <tr>
                    <td>@order.ProductName</td>
                    <td>@order.Image</td>
                    <td>@order.Quantity</td>
                    <td>@order.Price.ToString("c")</td>
                    <td>@order.TotalPrice.ToString("c")</td>
                </tr>

            </table>
        }
    }
}