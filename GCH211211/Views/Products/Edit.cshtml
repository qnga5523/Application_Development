@model GCH211211.Models.Product

@{
    ViewData["Title"] = "Edit";
}
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <h1>Update Product</h1>
    <form class="needs-validation" novalidate asp-controller="Products" asp-action="Update" method="post">
        <input type="hidden" asp-for="Id" class="form-control" />
        <div class="form-group mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" id="validationCustom01"
            required>
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="form-group mb-3">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" id="validationCustom02"
            required>
            <span asp-validation-for="Price" class="text-danger"></span>

        </div>
        <div class="form-group mb-3">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" class="form-control" id="validationCustom03"
            required>
            <span asp-validation-for="Quantity" class="text-danger"></span>

        </div>
        <div class="form-group mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" id="validationCustom04"
            required>
            <span asp-validation-for="Description" class="text-danger"></span>

        </div>
        <div class="form-group mb-3">
            <label asp-for="Image"></label>
            <input asp-for="Image" class="form-control" id="validationCustom04"
            required>
            <span asp-validation-for="Image" class="text-danger"></span>

        </div>
        <div class="form-group mb-3">
            <label asp-for="Category"></label>
            <select asp-for="CategoryId" class="form-control">
                <option value="0">Please select 1 category</option>
                @{
                    foreach (var item in ViewBag.Categories)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                }

            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>

        </div>
        <button class="btn btn-primary" style="border-radius:25px" type="submit">Update</button>
        <a asp-action="Index" class="btn btn-danger" type="button" style="border-radius:25px; margin-left:10px">Back to List</a>
    </form>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

